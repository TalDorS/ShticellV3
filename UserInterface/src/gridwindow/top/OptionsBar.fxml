<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="TOP_CENTER" prefHeight="76.0" prefWidth="1504.0" styleClass="options-bar-hbox" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gridwindow.top.OptionsBarController">
   <children>
      <Label id="selectedCellIDLabel" prefHeight="25.0" prefWidth="120.0" styleClass="options-bar-label" text="Selected Cell ID :">
         <HBox.margin>
            <Insets left="10.0" />
         </HBox.margin>
      </Label>
      <TextField fx:id="selectedCellId" alignment="TOP_LEFT" editable="false" prefHeight="25.0" prefWidth="87.0" styleClass="options-bar-text-field">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </TextField>
      <Label />
      <Label prefHeight="25.0" prefWidth="130.0" styleClass="options-bar-label" text="Original Cell Value :" />
      <TextField fx:id="originalCellValue" alignment="TOP_LEFT" editable="false" prefHeight="25.0" prefWidth="192.0" styleClass="options-bar-text-field">
         <HBox.margin>
            <Insets right="5.0" />
         </HBox.margin>
      </TextField>
      <Label prefHeight="25.0" prefWidth="70.0" styleClass="options-bar-label" text="Action :">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <HBox.margin>
            <Insets left="5.0" />
         </HBox.margin>
      </Label>
      <Button fx:id="interactiveFormulaButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="145.0" text="Interactive Formula">
         <HBox.margin>
            <Insets right="7.0" />
         </HBox.margin>
      </Button>
      <TextField fx:id="actionLineInput" prefHeight="25.0" prefWidth="302.0" promptText="Enter action details here" styleClass="options-bar-text-field">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <Button fx:id="updateValueButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="107.0" styleClass="options-bar-button" text="Update value">
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin>
      </Button>
      <Label prefHeight="25.0" prefWidth="114.0" styleClass="options-bar-label" text="Last Updated :" />
      <TextField fx:id="lastUpdateCellVersion" alignment="TOP_LEFT" editable="false" prefHeight="25.0" prefWidth="134.0" styleClass="options-bar-text-field">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </TextField>
      <MenuButton fx:id="versionSelectorButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" styleClass="options-bar-menu-button" text="Versions">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </MenuButton>
      <Label fx:id="currentVersionLabel" prefHeight="25.0" prefWidth="160.0" styleClass="options-bar-label" text="Current Version : Empty">
         <HBox.margin>
            <Insets right="5.0" />
         </HBox.margin>
      </Label>
   </children>
   <padding>
      <Insets bottom="10.0" top="10.0" />
   </padding>
</HBox>
