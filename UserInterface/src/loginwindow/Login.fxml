<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="loginwindow.LoginController" prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label text="Username" layoutX="200.0" layoutY="150.0" />

        <TextField fx:id="usernameField" promptText="Enter username" layoutX="280.0" layoutY="145.0" />

        <Button text="Login" layoutX="280.0" layoutY="200.0" onAction="#handleLoginAction"/>

        <Label fx:id="messageLabel" text="" layoutX="200.0" layoutY="250.0" />
    </children>
</AnchorPane>
