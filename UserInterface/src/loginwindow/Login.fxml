<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane  stylesheets="@Login.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="loginwindow.LoginController">

    <!-- Card container for login form -->
    <AnchorPane styleClass="login-card" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">

        <!-- Welcome message label -->
        <Label fx:id="welcomeLabel" layoutX="29.0" layoutY="23.0" prefHeight="27.0" prefWidth="248.0" styleClass="welcome-label" text="Welcome To Shticell!" />

        <!-- Username input field -->
        <TextField fx:id="userNameField" layoutX="31.0" layoutY="88.0" prefHeight="42.0" prefWidth="238.0" promptText="Username" styleClass="text-field" />

        <!-- Login button -->
        <Button fx:id="loginButton" layoutX="74.0" layoutY="156.0" onAction="#handleLoginAction" prefHeight="40.0" prefWidth="161.0" styleClass="button-login" text="Login" />

        <!-- Message label (for errors, feedback) -->
        <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="14.0" layoutY="202.0" prefHeight="55.0" prefWidth="272.0" styleClass="message-label" textAlignment="CENTER" />

    </AnchorPane>
</AnchorPane>
